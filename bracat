unpn() { egrep "$*.*/$" /var/db/paludis/repositories/un*/*repository| sed -e 's|/var/db/paludis/repositories/||' -e 's|/$||'};
pcn(){ for x in `echo /var/db/paludis/repositories/*/packages/*$2*/*$1*`;echo `basename $x` && grep -h SUMMARY= $x/*|head -1 }
pn(){ for x in $(echo /var/db/paludis/repositories/*/packages/*/*$**);echo $(basename $(dirname $x))/$(basename $x) && grep -h SUMMARY= $x/*|head -1}
bracat(){ pn $*;echo;unpn $*; }
